@using Microsoft.AspNetCore.Http;

@model IEnumerable<MvcDemo.Models.Development>



<center>
    <div class="heading">
       <h1>Age Groups</h1>
    </div>



<hr/>

@{
    if(Context.Session.GetString("UserRole") != null)
    {
        <button class="btn" style="width:150px; margin-bottom:10px;" onclick="myFunction()">Add Category</button>
    }
}


<div id="myDIV" class="show-hide" style="display:none; ">
  
     <form asp-action="AddCategory" asp-controller="Development">

            <div class="text-danger"></div>
             <div class="form-group">
                <input  name="ageCat"  style="width:400px;margin-top:30px; height:45px; border-radius:50px;"  class="form-control form-input" placeholder="New Development Category" />
                <p style="color:red;">@ViewBag.Error</p>
            </div>

            <div class="form-group" >
                <input type="submit" value="Submit" style="width:150px" class="btn"  />
            </div>
    </form>

</div>

</center>

<center>
     <div class="card-deck  justify-content-center " style="align-content:center; margin-right:20px; margin-left:20px;">

        @foreach (var cat in Model)
        {
            <div>
                <div class="card border-info m-3 align-content-center" style="width:220px; ">

                        @{
                            <center>
                              <div class=" card-header text-center" style="font-family:HelveticaNeue-Light;color:#0F3A61; font-size: 19px;height: 50px; background-color:#A8E7E3;">
                               Age Group
                              </div>
                             </center>
                          }

                    <div class="card-body" style="text-align:Left ; padding-bottom:20px ; color: blue">
                        <div style="height: 80px">

                            <center>

                            @{
                                var category = cat.category;
                                var num = category.Substring(0, category.IndexOf(' '));
                                var time = category.Substring(category.IndexOf(' '));
                             }

                              <h1 style="font-family:HelveticaNeue-Light;color:#0F3A61;" >@num <br> @time  </h1>

                            </center>

                        </div>
                        <br>

                        <br>
                       
                        <a  style="width:90%" class="btn" asp-action="AgeCatPhase" asp-controller="Development" asp-route-id="@cat.category"  > See details </a>

                    </div>

                </div>

            </div>
        }

    </div>
</center>

<style>
   
     
    .btn {
  background-color: #22B7AD;
  border: none;
  color: #0F3A61;
  padding: 10px;
  font-size: 15px;
  border-radius: 50px;
  margin-left: 10px;}


    .heading h1
    {
        font-family:HelveticaNeue-Light;
         color:#0F3A61; 
         margin-top:7%;
       
    }

    @@media only screen and (min-width:1000px){
        .heading h1{
                     margin-top:3%;
                   }
    }
 

</style>

<script>

function myFunction() {
  var x = document.getElementById("myDIV");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}

</script>
   


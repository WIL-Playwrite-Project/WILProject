@model MvcDemo.Models.Contact

@{
    ViewData["Title"] = "Contact Page";
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="heading">
    <center>
        <h1> How can we help you?</h1>
        <p> Have some questions or want to get in touch? 
            <br> Send us a message by filling in the form. 
        </p>
        <img src="~/css/Images/mailicon.png" style="width:10em;" /> 
    </center>

</div>

<div class="mail-form">
    <div class="col-md-6">
      
        <div>
            @if (ViewBag.Message == null)
            {
                <div>
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="Name" placeholder="Name" class="form-control" style="border-radius: 50px;" />
                            <span asp-validation-for="Name" style="color:#22B7AD" ></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" placeholder="Email (optional)" class="form-control" style="border-radius: 50px;" />
                          <span asp-validation-for="Email" style="color:#22B7AD" ></span>
                        </div>

                         <div class="form-group">
                            <input asp-for="Phone" placeholder="Phone" class="form-control" style="border-radius: 50px;" />
                            <span asp-validation-for="Phone" style="color:#22B7AD" ></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Subject" placeholder="Subject" class="form-control" style="border-radius: 50px;" />
                            <span asp-validation-for="Subject" style="color:#22B7AD" ></span>
                        </div>
                        <div class="form-group">
                            <textarea rows="5" cols="15" 
                            asp-for="Message" placeholder="Message" class="form-control" style="border-radius: 25px;"></textarea>
                           <span asp-validation-for="Message" style="color:#22B7AD" ></span>
                        </div>
                        <div>
                            <button type="submit" 
                            class="btn">Send</button>
                        </div>

                    </form>
                </div>
            }
        </div>


        <div>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div style="margin-top:7%">@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>

</div>


